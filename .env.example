# ─── Sanity CMS ──────────────────────────────────────────
NEXT_PUBLIC_SANITY_PROJECT_ID=     # Sanity project ID (from sanity.io dashboard)
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=                  # Sanity write token (Settings > API > Tokens)

# ─── Authentication (NextAuth + Google OAuth) ────────────
NEXTAUTH_URL=http://localhost:3000 # Production: https://wdi.co.il
NEXTAUTH_SECRET=                   # Generate: openssl rand -base64 32
GOOGLE_CLIENT_ID=                  # Google Cloud Console > OAuth 2.0
GOOGLE_CLIENT_SECRET=              # Google Cloud Console > OAuth 2.0
ADMIN_ALLOWED_EMAILS=              # Comma-separated: user1@wdi.co.il,user2@wdiglobal.com

# ─── Upstash Redis (Rate Limiting) ──────────────────────
UPSTASH_REDIS_REST_URL=            # Upstash console > REST API URL
UPSTASH_REDIS_REST_TOKEN=          # Upstash console > REST API Token

# ─── Sentry (Error Monitoring) ──────────────────────────
SENTRY_DSN=                        # Sentry project DSN
NEXT_PUBLIC_SENTRY_DSN=            # Same DSN, for client-side

# ─── Cloudflare Turnstile (Bot Prevention) ──────────────
TURNSTILE_SECRET_KEY=              # Cloudflare dashboard > Turnstile
NEXT_PUBLIC_TURNSTILE_SITE_KEY=    # Cloudflare dashboard > Turnstile
